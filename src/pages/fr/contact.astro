---
// Import the necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import ContactSection from "@components/sections/misc/ContactSection.astro";
import { SITE } from "@data/constants";

const pageTitle: string = `Contact | ${SITE.title}`;
---

<!--Utilizing MainLayout for the outer layout of the page, and defining meta for SEO purposes-->
<MainLayout
  title="Contact | Rumtoo machine de recyclage"
  lang="fr"
  structuredData={{
    "@context": "https://schema.org",
    "@type": "WebPage",
    "@id": "https://www.recyclingmachine.xyz/contact",
    url: "https://www.recyclingmachine.xyz/contact",
    name: "Contact Us | Rumtoo équipement",
    description:
      "Révolutionnez la gestion des déchets plastiques avec notre machine de recyclage à la pointe de la technologie. Transforme efficacement différents types de plastique en granulés réutilisables. Écologique, automatisée et économe en énergie. Explorez des solutions durables dès aujourd'hui.",
    isPartOf: {
      "@type": "WebSite",
      url: "https://www.recyclingmachine.xyz",
      name: "ScrewFast",
      description:
        "Rumtoo Machinery propose des machines de recyclage du plastique de premier ordre pour répondre à tous vos besoins de projet.",
    },
    inLanguage: "en-US",
  }}
>
  <ContactSection />
</MainLayout>
