---
// Import the necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import ContactSection from "@/components/sections/ContactSection.astro";
import { SITE } from "@/data_files/constants";

const pageTitle: string = `Contact | ${SITE.title}`;
---

<!--Utilizing MainLayout for the outer layout of the page, and defining meta for SEO purposes-->
<MainLayout
  title={pageTitle}
  structuredData={{
    "@context": "https://schema.org",
    "@type": "WebPage",
    "@id": "https://www.recyclingmachine.xyz/contact",
    "url": "https://www.recyclingmachine.xyz/contact",
    "name": "Contact Us | Rumtoo Machinery",
    "description":
      "Revolutionize plastic waste management with our cutting-edge recycling machine. Efficiently transforms various plastic types into reusable pellets. Eco-friendly, automated, and energy-efficient. Explore sustainable solutions today.",
    "isPartOf": {
      "@type": "WebSite",
      "url": "https://www.recyclingmachine.xyz",
      "name": "Recycling Machinery",
      "description":
        "Rumtoo Machinery offers top-tier Plastic recycling machine to meet all your project needs.",
    },
    "inLanguage": "en-US"
  }}
>
  <ContactSection />
</MainLayout>
